<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:elevation="3dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:minHeight="300dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/padding_min">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/suggestions_bottomsheet_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/padding_large"
                android:layout_marginBottom="@dimen/spacing_min"
                android:layout_weight="1"
                android:fontFamily="@font/red_hat_text_bold"
                android:paddingHorizontal="@dimen/padding_default"
                android:text="@string/suggestions_bottomsheet_title"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp" />

            <ImageButton
                android:id="@+id/close_suggestions_bottomsheet"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:layout_marginHorizontal="@dimen/padding_min"
                android:background="#00FFFFFF"
                android:contentDescription="@string/suggestions_bottomsheet_close_icon_desc"
                android:src="@drawable/ic_close" />

        </LinearLayout>

        <TextView
            android:id="@+id/suggestion_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_default"
            android:layout_marginVertical="@dimen/spacing_min"
            android:background="@drawable/suggestion_card_active"
            android:fontFamily="@font/red_hat_text"
            android:paddingHorizontal="@dimen/padding_min"
            android:paddingVertical="@dimen/padding_small"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            tools:text="I find it hard sometimes to connect with women who commonly require financial assistance" />

        <TextView
            android:id="@+id/suggestion_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_default"
            android:layout_marginVertical="@dimen/spacing_min"
            android:background="@drawable/suggestion_card_inactive"
            android:fontFamily="@font/red_hat_text"
            android:paddingHorizontal="@dimen/padding_min"
            android:paddingVertical="@dimen/padding_small"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            tools:text="I find it hard sometimes to connect with women..." />

        <TextView
            android:id="@+id/suggestion_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/padding_default"
            android:layout_marginVertical="@dimen/spacing_min"
            android:background="@drawable/suggestion_card_inactive"
            android:fontFamily="@font/red_hat_text"
            android:paddingHorizontal="@dimen/padding_min"
            android:paddingVertical="@dimen/padding_small"
            android:textColor="?attr/colorOnSurface"
            android:textSize="14sp"
            tools:text="I find it hard sometimes to connect with women..." />

        <Button
            android:id="@+id/accept_suggestion_positive_button"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="@dimen/padding_default"
            android:layout_marginTop="@dimen/spacing_min"
            android:layout_marginBottom="@dimen/spacing_default"
            android:text="@string/suggestion_bottom_sheet_positive_button"
            android:background="@drawable/button_background"
            android:fontFamily="@font/inter_semibold"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="12sp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>

